<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lila</item>
        <item name="colorPrimaryDark">@color/violeta</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Boton">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@color/lila_claro</item>
    </style>

    <style name="Texto">
        <item name="android:textColor">@color/violeta</item>
    </style>

    <style name="Titulo_Formulario">
        <item name="android:textColor">@color/lila</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Texto_Mediano">
        <item name="android:textColor">@color/violeta</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Texto_Grande">
        <item name="android:textColor">@color/violeta</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="texto_error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/rojo</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
