<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Titulo de la pantalla -->
        <TextView
            android:id="@+id/finalizar_traslado_titulo"
            style="@style/Texto_Mediano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalizar_traslado_titulo"
            android:textAlignment="center" />

        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/finalizar_traslado_texto_recepcion"
            style="@style/Texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:text="@string/texto_finalizar_traslado"
            android:textSize="18sp" />


        <!--  Nombre Receptor -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/finalizar_traslado_nombre_receptor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:errorTextAppearance="@style/texto_error"
            app:hintTextAppearance="@style/TextoHint">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/finalizar_traslado_hint_nombre_receptor"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--  ObservaciÃ³n -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/finalizar_traslado_observacion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:errorTextAppearance="@style/texto_error"
            app:hintTextAppearance="@style/TextoHint">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/finalizar_traslado_hint_observacion"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Boton Finalizar Traslado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_finalizar_traslado"
            style="@style/Boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/finalizar_traslado_boton_finalizar"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>